<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
  <!-- "client" is the name it takes in [the logs of] the SimGrid world
       "./basic_node1" is the command that we have to fork+exec in the real world
   -->
  <actor host="host0" function="client">
     <argument value="@CMAKE_BINARY_DIR@/tests/basic/basic_node1"/>
  </actor>
  <actor host="host1" function="server">
     <argument value="@CMAKE_BINARY_DIR@/tests/basic/basic_node2"/>
  </actor>
</platform>
